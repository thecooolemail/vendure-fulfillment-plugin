{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "types": ["node"],
    "declaration": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/ui/*", "test/__admin-ui", "node_modules"]
}
